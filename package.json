{
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "compile": "tsc",
        "docs": "gulp docs",
        "lint": "tslint --format stylish --project .",
        "lint:fix": "tslint --fix --format stylish --project .",
        "postinstall": "npm run bootstrap",
        "prepublishOnly": "npm run lint && npm run compile && npm install && npm test",
        "test": "jest"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^23.3.9",
        "gulp": "^4.0.0",
        "gulp-clean": "^0.4.0",
        "gulp-typedoc": "^2.2.0",
        "jest": "^23.6.0",
        "lerna": "^3.4.3",
        "ts-jest": "^23.10.4",
        "tslint": "^5.11.0",
        "typedoc": "^0.13.0",
        "typescript": "^3.1.6"
    },
    "jest": {
        "clearMocks": true,
        "automock": false,
        "roots": [
            "<rootDir>/packages"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "\\.test\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "collectCoverage": true,
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 90,
                "lines": 90,
                "statements": 90
            }
        }
    }
}
