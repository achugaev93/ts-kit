{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "alwaysStrict": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "lib": [
      "esnext"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "strictFunctionTypes": true,
    "baseUrl": "./"
  },
  "exclude": [
    "./node_modules/**"
  ]
}
